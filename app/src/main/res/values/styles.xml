<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/dashboard_bg</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@android:color/black</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryLight">@android:color/darker_gray</item>


        <item name="selectedRowBackgroundColor">#333333</item>

        <item name="rowTextColor">?attr/selectedRowBackgroundColor</item>
        <item name="rowBackGroundColor">@android:color/transparent</item>

    </style>
    <!--Dark Theme-->
    <style name="AppThemeDark" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/dashboard_bg</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <item name="iconTint">@android:color/black</item>
        <!-- <item name="tint">@android:color/white</item>-->
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimaryLight">@color/light_black</item>
        <item name="colorPrimaryDark">@android:color/black</item>


        <item name="selectedRowBackgroundColor">@android:color/black</item>

        <item name="rowTextColor">@android:color/white</item>
        <item name="rowBackGroundColor">@android:color/transparent</item>

    </style>

    <style name="AppThemeRed" parent="AppThemeLight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorPrimaryLight">@color/red_light</item>
        <item name="colorAccent">@color/red_light</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/red_dark</item>

        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>

        <item name="rowTextColor">@color/light_black</item>
        <item name="rowBackGroundColor">@android:color/transparent</item>


    </style>

    <style name="AppThemeOrange" parent="AppThemeLight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorPrimaryLight">@color/light_orange</item>
        <item name="colorAccent">@color/light_orange</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/dark_orange</item>


        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>


        <item name="rowTextColor">?attr/colorAccent</item>
        <item name="rowBackGroundColor">@android:color/transparent</item>

    </style>

    <style name="AppThemeYellow" parent="AppThemeLight">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/yellow_dark</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorPrimaryLight">@color/yellow_light</item>
        <item name="colorAccent">@color/yellow_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/yellow_dark</item>
        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="rowTextColor">?attr/colorAccent</item>

    </style>

    <style name="AppThemeIndigo" parent="AppThemeLight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo_dark</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="colorPrimaryLight">@color/indigo_light</item>
        <item name="colorAccent">@color/indigo_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/indigo_dark</item>
        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="rowTextColor">?attr/colorAccent</item>

    </style>

    <style name="AppThemeGreen" parent="AppThemeLight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorPrimaryLight">@color/green_light</item>
        <item name="colorAccent">@color/green_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/green_light</item>
        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="rowTextColor">?attr/colorAccent</item>

    </style>

    <style name="AppThemeBlue" parent="AppThemeLight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorPrimaryLight">@color/light_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="selectedRowBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="rowTextColor">?attr/colorAccent</item>

    </style>

</resources>
