<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        tools:background="#09C">

        <TextClock
            android:id="@+id/clock0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:text="12:05 AM" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/timzone0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/clock0"
            tools:text="India" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        tools:background="#09C">

        <TextClock
            android:id="@+id/clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm a\nE dd MMM"
            android:gravity="start"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:text="12:05 AM" />

        <TextView
            android:id="@+id/timzone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/clock1"
            tools:text="Central europian time" />
    </RelativeLayout>
</LinearLayout>