<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/light_widget_bg"
    android:gravity="center"
    android:padding="@dimen/widget_margin"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_marginEnd="@dimen/dp5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="1"
       >

        <TextClock
            android:id="@+id/clock0"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:format12Hour="hh:mm:ss a\nE dd MMM"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp20"
            tools:text="12:05 AM" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@android:color/black"
            android:id="@+id/txt_timezone0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/clock0"
            android:textSize="@dimen/sp12"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_below="@+id/clock0"
            tools:text="Kuala lumpur              " />
    </RelativeLayout>

<!--<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/separator"
    android:layout_width="0dp"
    android:layout_weight="0.02"
    android:visibility="gone"
    android:background="@android:color/black"
    android:layout_height="match_parent"/>-->
    <RelativeLayout
        android:layout_marginStart="@dimen/dp5"
        android:id="@+id/rel_custom_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

      >

        <TextClock
            android:id="@+id/clock1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm:ss a\nE dd MMM"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp20"
            tools:text="12:05 AM"
            android:layout_marginBottom="@dimen/dp5"

            />

        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/txt_timezone1"
            android:textSize="@dimen/sp12"
            android:maxLines="1"
            android:layout_alignStart="@+id/clock1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/clock1"
            tools:text="Malaysia" />
    </RelativeLayout>
</LinearLayout>