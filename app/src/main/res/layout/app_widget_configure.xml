<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="com.jk.mr.duo.clock.AppWidgetConfigureActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:titleTextColor="?attr/colorControlNormal"
                style="@style/Base.Widget.AppCompat.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize" />

        </com.google.android.material.appbar.AppBarLayout>


        <TextClock

            android:id="@+id/dashboard_clock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp40"
            tools:text="dash"
            android:includeFontPadding="true"
            android:alpha="0.4"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/dashboard_timezone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            tools:text="Kuala ljmpjr"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_clock" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            android:scaleType="center"
            android:alpha="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar" />

        <!-- <fragment android:id="@+id/autocomplete_fragment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
             app:layout_constraintTop_toBottomOf="@+id/appbar"     />-->


